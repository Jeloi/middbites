<div class="top-chunk">
	<h2>Menus</h2>
	<span class="sort_by">
		<span>View by: </span>
		<%= link_to "Meal", params.merge(sort_by: ""), class: ("active" unless params[:sort_by] == "dining_hall") %>
		<%= link_to "Dining Hall", params.merge(sort_by: "dining_hall"), class: ("active" if params[:sort_by] == "dining_hall") %>
	</span>
</div>
<div id="sliders_counter" class="clrfix" data-numsliders="<%= @menus_hash.keys.size %>"></div>
<% @menus_hash.each_with_index do |(key, value), index| %>
	<div class="menu-section">
	<h3 class="section"><%= key %>:</h3>
		
		<div id="bxpager<%= index %>" class="pager">
			<% ii = 0 %>
			<% value.each_with_index do |(k, v), i| %>
				<% if !v.empty? %>
					<a data-slide-index="<%= ii %>" href="#"><%= k %></a>
					<% ii = ii + 1 %>
				<% end -%>
			<% end -%>
		</div>

		<ul id="bxslider<%= index %>">
			<% value.each_pair do |k, v| %>
				<% if !v.empty? %>
				<li>
					<h4 class="group"><%= k %></h4>
					<ul class="meals">
						<% v.each do |meal| %>
						<li><%= meal %></li>
						<% end -%>
					</ul>
				</li>
				<% end -%>
			<% end -%>
		
		</ul>

	</div>
<% end -%>


