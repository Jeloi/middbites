<% view = params[:view] %>
<% if view == "detailed" || view.blank? %>
	$('.detailed-recipes').append('<%= j render "detailed_recipes", recipes: @recipes %>')
<% elsif view == "tiles" %>
	$('.tile-recipes ul').append('<%= j render "tile_recipes", recipes: @recipes %>')
<% elsif view == "list" %>
	$('.list-recipes tbody').append('<%= j render "list_recipes", recipes: @recipes %>')
<% end %>

<% if @recipes.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @recipes, inner_window: 2, outer_window: -1, class: "row pagination", next_label: "Next", previous_label: "Prev" %>');
  $('#load_more').text('Load More');
<% else %>
  $('#load_more').remove();
  $('.pagination').remove();
<% end %>