<% recipes.each do |recipe| %>
	<li class="recipe-item">
		<div class="image">
			<%= link_to(recipe_path(recipe),  class: "overlay") do %>
				<div class="vert-center-table">
					<div class="cell text-center">
						<%= recipe.ingredients_list %>
						<%# render 'recipes/actions_mini', recipe: recipe %>
					</div>
				</div>
			<% end -%>	
			
			<% if !recipe.image_url(:thumb).nil? %>
				<%= image_tag recipe.image_url(:thumb) %>
			<% else %>
				<%= image_tag "default_image.jpg" %>
			<% end %>
