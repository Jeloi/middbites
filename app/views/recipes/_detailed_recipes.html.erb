<% counter = 1 %>
<% recipes.each do |recipe| %>
	<div class="medium-10 large-9 xlarge-6 medium-centered large-centered xlarge-uncentered columns">
		<div class="clrfix recipe-item invisible">
			<% if !recipe.image_url(:thumb).nil? %>
				<% img_url = "#{request.protocol}#{request.host_with_port}#{recipe.image_url(:thumb)}" %>
			<% else %>
				<% img_url = "#{request.protocol}#{request.host_with_port}/assets/default_image.jpg" %>
			<% end %>			
			<div class="image" style="background-image: url('<%= img_url %>')">
				<% if params[:action] == "top" %>
					<span class="rank-number"><%= counter %></span>
				<% end %>

				<%= link_to(recipe_path(recipe),  class: "overlay") do %>
					<div class="vert-center-table">
						<div class="cell text-center">
							<% recipe.tags_list.split(", ").each do |tag| %>
								<span class="overlay-tag"><%= tag %></span>	
							<% end %>	
						</div>
					</div>
				<% end -%>	
			</div>
			<div class="info-wrapper">
				<div class="cell">
					<div class="info vert-align">
						<%= link_to recipe.title, recipe_path(recipe), class: "small-font-secondary title" %>
						<div class="create-info">
							By <%= link_to recipe.user.handle, root_path %> <span class="dot">â€¢</span> <%= recipe.created_at.strftime('%b %e, %Y') %>
						</div>
						<div class="hide-for-medium">
							<div class="blurb">"<%= recipe.blurb %>"</div>
						</div>
						<div class="ingredients">
							<span class="ingredients-hover" data-dropdown="ingredients_dropdown_<%= recipe.id %>" data-options="is_hover:true">
								<%= recipe.ingredients_count %> Ingredients
							</span>
						</div>
						<%= render 'recipes/actions_mini', recipe: recipe, user_bites: @user_bites, user_favs: @user_favs %>

						<% if params[:action] == "popular" %>
						<div class="recent-bites">
							<strong><%= recipe.recent_bites %></strong> recent <%= recipe.recent_bites > 1 ? "bites" :  "bite" %>
						</div>
						<% end %>

						<div id="ingredients_dropdown_<%= recipe.id %>" data-dropdown-content class="ingredients-dropdown f-dropdown">
							<%= recipe.ingredients_list %>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
<% counter += 1 %>
<% end -%>