<% if logged_in? %>
<div class="actions actions-mini" data-recipe-id="<%= recipe.id %>">
	<!-- Bite -->
	<% if @user_bites.include? recipe.id %>
		<%= link_to "", unvote_recipe_path(recipe.id, association: "bites"), remote: true, method: :delete, class: "bite icon voted" %>
	<% else %>	
		<%= link_to "", vote_recipe_path(recipe.id, association: "bites"), remote: true, method: :post, class: "bite icon" %>
	<% end %>
	<div class="number"><%= recipe.bites_count %></div>
	<!-- Favorite -->
	<% if @user_favs.include? recipe.id  %>
		<%= link_to ''.html_safe, unvote_recipe_path(recipe.id, association: "favorites"), remote: true, method: :delete, class: "fav icon-font icon voted" %>
	<% else %>	
		<%= link_to ''.html_safe, vote_recipe_path(recipe.id, association: "favorites"), remote: true, method: :post, class: "fav icon-font icon" %>
	<% end %>
	<div class="number"><%= recipe.favorites_count %></div>
	<!-- Comment -->
	<div class="comment icon">
		<%= link_to '&#xf000;'.html_safe, recipe_path(recipe)+"#comments", class: "icon-font" %>
	</div>
	<div class="number"><%= recipe.comments_count %></div>
</div>
<% else %>
<div class="actions actions-mini">

</div>
<% end -%>