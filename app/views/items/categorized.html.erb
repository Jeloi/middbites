<div class="row">
	<div class="small-12 medium-12 large-10 small-centered columns grouped-items">
		<% @item_categories.each do |category| %>
			<h4><%= category.name %></h4>	
			<ul class="ingredients-page ">
				<% category.items.each do |item| %>
					<li><%= formatted_item_link(item) %></li>
				<% end %>	
			</ul>
		<% end %>
	</div>
</div>